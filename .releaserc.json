{
  "branches": [
    "main",
    { "name": "commit-log", "prerelease": "commit-log" },
    { "name": "beta", "prerelease": "beta" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "linkCompare": false,
        "writerOpts": {
          "groupBy": false,
          "date": "dateFormat(new Date(), 'mm-dd-yyyy', true)",
          "headerPartial": "## {{#if isPatch~}} <small>\n  {{~/if~}} v{{version}}\n  {{~#if title}} \"{{title}}\"\n  {{~/if~}}\n - {{~#if date}} {{date}}\n  {{~/if~}}\n  {{~#if isPatch~}} </small>\n  {{~/if}}"
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Release Notes"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"]
      }
    ]
  ]
}
