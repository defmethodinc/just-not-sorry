{
  "name": "just-not-sorry",
  "description": "Gmail Plug-in that warns you when you write emails using words which undermine your message",
  "version": "2.0.0-beta.1",
  "author": "Steve Brudz, Manish Kakwani, Tami Reiss, and Eric Tillberg of Def Method",
  "license": "MIT",
  "repository": "git@github.com:defmethodinc/just-not-sorry.git",
  "homepage": "https://github.com/defmethodinc/just-not-sorry",
  "bugs": "https://github.com/defmethodinc/just-not-sorry/issues/new",
  "scripts": {
    "test": "gulp jasmine-headless-chrome",
    "test:watch": "gulp jasmine-browser",
    "build": "webpack --config webpack.config.js",
    "build:watch": "webpack --config webpack.config.js --watch",
    "run:webext": "web-ext run --source-dir ./build/ --start-url gmail.com",
    "start:firefox": "concurrently \"npm:build:watch\" \"npm:run:webext\"",
    "start:chrome": "concurrently \"npm:build:watch\" \"npm:run:webext -- -t chromium\"",
    "format": "prettier --loglevel warn --write \"{src,spec}/*.{js,css}\" \"*.{md,css,json,js}\"",
    "lint": "eslint . --cache --fix"
  },
  "devDependencies": {
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "commitizen": "^4.0.4",
    "concurrently": "^5.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jasmine": "^4.1.1",
    "gulp": "^4.0.2",
    "gulp-jasmine-browser": "^4.1.0",
    "gulp-open": "^3.0.1",
    "gulp-watch": "^5.0.1",
    "husky": "^4.2.5",
    "jasmine-core": "^3.5.0",
    "jasmine-jquery": "^2.1.1",
    "jquery": "^3.5.1",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "puppeteer": "^2.1.1",
    "semantic-release": "^17.0.4",
    "web-ext": "^4.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "dom-regexp-match": "^1.1.0",
    "fastdom": "^1.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged",
      "pre-push": "npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ],
    "*.{md,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
